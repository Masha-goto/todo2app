.container
  %h2 All Board
  .card
    - if user_signed_in?  && current_user.has_written?(@task)
      .task_detail_actions
        .dropdown
          = image_tag 'Combined Shape.svg', class: 'dropbtn'
          .dropdown-content.mini
            = link_to 'Edit', edit_task_path(@task)
            = link_to 'Delete', task_path(@task), data: { method: 'delete', confirm: 'Are you sure you want me to delete it?'}
    .card_content
      .card_title
        = @task.name
      .card_text
        = @task.content
      .card_detail
        = image_tag @task.user.avatar_image
  = link_to new_task_path do
    .card.add
      .card_content
        .add_new + Add new borad
