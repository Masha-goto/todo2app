.container
  .card_title.show
    = @card.name
    - if user_signed_in?  && current_user.has_written?(@card)
      .card_detail_actions.show
        .dropdown
          = image_tag 'Combined Shape.svg', class: 'dropbtn'
          .dropdown-content.mini
            = link_to 'Edit', edit_card_path(@card)
            = link_to 'Delete', card_path(@card), data: { method: 'delete', confirm: 'Are you sure you want me to delete it?'}
    -if @card.eyecatch.attached?
      .card_image.show
        = image_tag @card.eyecatch
  .card
    .card_content
      .card_text.show
        = @card.content
      .card_limit
        = @card.limit_date
  .card.comment
    %h2 Comment
    - @comments.each do |comment|
      .card_detail
        = image_tag @card.user.avatar_image
        %p= comment.content
  = link_to new_card_comment_path(@card) do
    .card.add.comment
      .card_content
        .add_new + Add new comment